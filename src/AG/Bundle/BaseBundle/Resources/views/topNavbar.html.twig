<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        
        <div class="navbar-header">
            <a href="{{ path("home") }}" class="navbar-brand">AutoGRU</a>
            <button ng-init="navCollapsed = true" ng-click="navCollapsed = !navCollapsed" class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        
        <div class="navbar-collapse collapse" id="navbar-main" ng-class="!navCollapsed && 'in'">
            
            <ul class="nav navbar-nav">
                <li><a href="{{ path("car_search_layout") }}"><i class="fa fa-search"></i> {{ 'navbar.search'|trans({}, 'AGUserBundle') }}</a></li>
            </ul>

            <ul class="nav navbar-nav navbar-right">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li>
                    <a target="_blank" href="http://gravatar.com/emails/" id="user_gravatar_link" tooltip-placement="bottom" tooltip="Поменяйте свой аватар на gravatar.com">
                        <img src="{{ gravatar(app.user.email) }}" alt="{{ app.user.username }} gravatar" class="img-circle" style="vertical-align: middle;">
                    </a>
                </li>
                <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{ 'layout.logged_in_as'|trans({'%username%': app.user.fullName }, 'FOSUserBundle') }} <span class="caret"></span></a>
                    <ul class="dropdown-menu" aria-labelledby="user">
                        <li><a href="{{ path("user_profile") }}"><i class="fa fa-user"></i> Мой профиль</a></li>
                        <li class="divider"></li>
                        <li><a href="{{ path("fos_user_security_logout") }}"><i class="fa fa-sign-out"></i> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a></li>
                    </ul>
                </li>
                {% else %}
                <li class="dropdown">
                    <a href="#register" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-plus"></i> {{ 'layout.register'|trans({}, 'FOSUserBundle') }} <b class="caret"></b></a>
                    {% include 'AGBaseBundle::registerFormPanel.html.twig' %}
                </li>
                <li class="dropdown">
                    <a href="#login" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-sign-in"></i> {{ 'layout.login'|trans({}, 'FOSUserBundle') }} <b class="caret"></b></a>
                    {% include 'AGBaseBundle::loginFormPanel.html.twig' %}
                </li>
                {% endif %}
            </ul>

        </div>
    </div>
</div>