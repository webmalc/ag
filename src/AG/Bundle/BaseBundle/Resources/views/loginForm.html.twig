<form ng-controller="LoginController" name="login_form" class="form login-form" ng-submit="processForm()" role="form" method="post" data-href="{{ path("fos_user_security_check") }}" accept-charset="UTF-8">

    <div class="alert alert-danger" ng-cloak ng-show="error">
        Упс! {[{error}]}
    </div>
    
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input type="text" name="_username" ng-model="login._username" class="form-control" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" required value="">
    </div>
    <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <input type="password" name="_password" ng-model="login._password" class="form-control" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}" required value="">
    </div>
    <div class="checkbox">
        <label><input type="checkbox" name="_remember_me" ng-model="login._remember_me" value="on"> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
    </div>
    <div class="form-group">
        <button type="submit" ng-disabled="login_form.$invalid" name="_submit" class="btn btn-success btn-block">
            <span ng-cloak ng-show="loading"><i class="fa fa-spinner fa-spin fa-lg"></i> </span>
            {{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}
        </button>
    </div>
        <input type="hidden" name="_csrf_token" value="{[{login._csrf_token}]}" ng-init="login._csrf_token='{{ fos_csrf_provider.generateCsrfToken('authenticate') }}'" />
    </form>