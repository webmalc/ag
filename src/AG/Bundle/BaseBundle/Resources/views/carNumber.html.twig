<form class="form-inline car-number" id="car-search-form" name="carSearchForm" role="form">

    <div class="car-number-wrapper">

        <div class="car-number-wrapper-left">
            <div class="form-group">
                <input type="text" ng-model="num1" required class="form-control input-lg car-number car-number-1" maxlength="1" placeholder="А">
            </div>
            <div class="form-group">
                <input type="text" ng-model="num2" required class="form-control input-lg car-number car-number-2" maxlength="3" placeholder="999">
            </div>
            <div class="form-group">
                <input type="text" ng-model="num3" required class="form-control input-lg car-number car-number-3" maxlength="2" placeholder="АА">
            </div>
        </div>

        <div class="car-number-wrapper-right">
            <div class="form-group">
                <input type="text" ng-model="num4" required class="form-control input-lg car-number car-number-4" maxlength="3" placeholder="177">
            </div>
        </div>

        <div class="car-number-wrapper-button">
            <button ng-disabled="carSearchForm.$invalid" ng-click="processCarNumber()" type="submit" class="btn btn-success btn-lg">
                <i ng-cloak ng-show="processCarNumberButton" class="fa fa-spinner fa-spin"></i>
                <i ng-init="processCarNumberButton = false" ng-show="!processCarNumberButton"  class="fa fa-{{icon}}"></i>
            </button>
        </div>
        
        <div style="clear: both;"></div>
    </div>


</form>